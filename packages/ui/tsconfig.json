{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "skipLibCheck": true,
    "jsx": "react",
    "lib": [
      "es5",
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2019",
      "es2020",
      "esnext",
      "dom",
      "dom.iterable"
    ],
    "baseUrl": ".",
    "types": ["react", "react-dom", "jest"]
  },
  "include": ["./src/**/*.ts", "./src/**/*.tsx", "./index.d.ts"],
  "exclude": ["node_modules"]
}
